.carousel
  width: 100%
  position: relative


.carousel-activator
  display: none


.carousel-controls
  display: none
  align-items: center
  justify-content: space-between
  position: absolute
  top: 0; bottom: 0
  right: -32px; left: -32px

  &:first-of-type
    justify-content: flex-end


.carousel-control
  cursor: pointer
  display: flex
  width: 48px
  height: 48px
  align-items: center
  justify-content: center
  user-select: none
  background-color: rgba(#3e3f44, .6)
  border-radius: 50%
  box-shadow: 0px 2px 12px rgba(33, 34, 36, .3)
  transform: scale(.95)
  transition: transform .3s ease-in-out,
              background-color .3s ease-in-out
  z-index: 1


  &:hover
    transform: scale(1)
    background-color: rgba(#3e3f44, .8)

  > .img
    width: 60%

  > .right-arrow
    transform: rotate(180deg)



for $i in (1..3)
  .carousel-activator:nth-of-type({$i}):checked
    ~ .carousel-controls:nth-of-type({$i})
      display: flex


  .carousel-activator:nth-of-type({$i}):checked
    ~ .carousel-screen > .carousel-track
      transform: translateX((1 - $i) * 100%)



.carousel-screen
  overflow: hidden
  margin-left: -16px
  margin-right: -16px


.carousel-track
  font-size: 0 // remove space between slides
  transition: transform .5s ease
  white-space: nowrap


.carousel-item
  display: inline-flex
  padding-left: 1%
  padding-right: 1%
  vertical-align: middle
  white-space: normal
  width: (100% / 3)


.item-content
  color: var(--main-color)
  display: flex
  flex-direction: column
  font-size: 16px
  min-height: 402px
  height: 100%
  width: 100%
  padding: 16px
  margin: 0
  justify-content: space-between
  border: 1px solid var(--main-color)
  border-radius: 4px


.img-product
  width: auto
  height: 280px
  object-fit: cover
  border-radius: 4px
  border: 1px solid var(--main-color)


.wrap-caption-product
  display: grid
  grid-template-columns: auto min-content


.title-product,
.price-product
  font-weight: 900
  font-size: 24px

.title-product
  color: var(--secondary-color)
  text-transform: uppercase

.price-product
  justify-self: right


.caption-product
  grid-column: span 2
  line-height: 1.1



@media screen and (max-width: 960px)
  .carousel-activator:nth-of-type(n):checked
    ~ .carousel-controls:nth-of-type(n)
      display: none

    ~ .carousel-screen > .carousel-track
      transform: none


  .carousel-screen
    margin-left: 0
    margin-right: 0


  .carousel-track
    overflow-x: auto
    width: auto
    padding-left: 48px
    padding-right: 48px
    padding-bottom: 8px


  .carousel-track
    padding-left: 0
    padding-right: 0


  .carousel-item
    width: (90% / 2)

    &:first-of-type
      padding-left: 0


    &:last-of-type
      padding-right: 0


@media screen and (max-width: 660px)
  .carousel-item
    width: 90%
